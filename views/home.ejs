<form action="/doctor/register" method="POST">
    <label for="plan_name">Plan Name:</label>
    <input type="text" id="plan_name" name="plan_name" required><br><br>

    <label for="duration">Duration:</label>
    <input type="text" id="duration" name="duration" required><br><br>

    <label for="price">Price:</label>
    <input type="number" id="price" name="price" step="0.01" required><br><br>

    <label for="feature1">Feature 1:</label>
    <textarea id="feature1" name="feature1" required></textarea><br><br>

    <label for="feature2">Feature 2:</label>
    <textarea id="feature2" name="feature2" required></textarea><br><br>

    <label for="feature3">Feature 3:</label>
    <textarea id="feature3" name="feature3" required></textarea><br><br>

    <label for="feature4">Feature 4:</label>
    <textarea id="feature4" name="feature4" required></textarea><br><br>

    <button type="submit">Submit</button>
</form>